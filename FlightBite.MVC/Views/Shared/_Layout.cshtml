    <section class="header-section">
        <header class="header page-content page-content--max-1440">
            <div class="header__logo" style="margin-top: 8px;">
                <img src="~/images/flight-bite-logo.svg" />
            </div>
            <div class="header__nav-bar">

                <a class="nav__menu" is-active-route asp-area="SuperAdmin" asp-controller="Home" asp-action="Index">
                    <span class="icon-home"></span>
                    <div>Enquiries</div>
                </a>
                <a class="nav__menu" is-active-route asp-area="SuperAdmin" asp-controller="Client" asp-action="Index">
                    <span class="icon-airplane"></span>
                    <div>Clients</div>
                </a>
                <a class="nav__menu" is-active-route style="position: relative">
                    <span class="icon-bell"></span>
                    <span class="icon-counter">5</span>
                    <div>Notificataions</div>
                </a>
                <div class="header__profile-photo">
                    <img src="~/images/profile-photo.png" />
                </div>
            </div>
        </header>
    </section>


