    <title>@ViewData["Title"] - FlightBite.MVC</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="icon" type="image/x-icon" href="./images/flight-bite-logo.svg"/>
