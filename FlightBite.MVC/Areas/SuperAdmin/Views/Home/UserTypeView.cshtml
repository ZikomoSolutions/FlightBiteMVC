					//			<span class="checkmark"></span>
					//			<br />
					//		</label>
					//	</div>
					//}

				}
				<div class="flex flex--align-center" style="justify-content:center" hx-trigger="click" hx-get="@Url.Action("AddEnquiry","Home")" hx-target="#ShowEnquiryForm">
					<button type="button" class="btn btn--brand-1" style="margin-top:16px;">  Proceed </button>
				</div>
			</div>
		</div>
	</div>
</div>