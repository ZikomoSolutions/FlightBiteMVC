@using FlightBite.MVC.Areas.SuperAdmin.ViewModels;
@model EnquiryCreateViewModel
@{
	Layout = null;
}

<div class="modal modal--active" id="enquiry-modal">
	<div class="modal__container " id="enquiry-section-1">
		<div class="modal__header flex flex--distribute flex--align-center">
			<div class="h3">I AM A</div>
		</div>

		<div class="modal__body">
			<div id="type-of-client">
				@{
					if (Model.UserTypes != null)
					{
						foreach (var UserType in Model.UserTypes!)
						{
							<div style="margin-top: 24px;">
								<label class="radio-button-container">
									@UserType.UserType
									<input type="radio" value="@UserType.Id" id="Type-@UserType.Id" asp-for="@Model.UserTypeSelectedId" />
									<span class="checkmark"></span>
									<br />
								</label>
							</div>
						}
					}

