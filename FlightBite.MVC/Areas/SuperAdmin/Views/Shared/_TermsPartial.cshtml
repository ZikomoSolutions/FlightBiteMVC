@using FlightBite.MVC.Areas.SuperAdmin.ViewModels;
@model List<SelectListItem>

<div class="flex flex--is-column flex--has-gap">
    @if (Model != null)
    {
        for (int i = 0; i < Model.Count(); i++)
        {
            <div class="checkbox">
                <input type="checkbox" asp-for="@Model[i].Selected" />
                <label asp-for="@Model[i].Selected">@Model[i].Text</label>
                <input type="hidden" asp-for="@Model[i].Value" />
                <input type="hidden" asp-for="@Model[i].Text" />
            </div>
        }

    }
</div>